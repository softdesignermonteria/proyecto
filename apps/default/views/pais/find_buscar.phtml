		jQuery("#tablapais").jqGrid('navButtonAdd','#pagerpais',{
		caption: "Columnas",
		title: "Reordena Columnas",
		onClickButton : function (){
			jQuery("#stablapais").jqGrid('columnChooser');
		
	});}*/
});
</script>