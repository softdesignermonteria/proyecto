<div id="pagernbc"></div>
<script>
jQuery(document).ready(function(){

		
		jQuery("#tabladepartamentos").jqGrid(
		{ 
			ajaxGridOptions : {type:"POST"},
			url:'<?php echo core::getInstancePath().Router::getController(); ?>/find_detalle_buscar/?codigo_pais=<?php echo $_REQUEST["codigo_pais"] ?>', 
			datatype: "json", 
			colNames:['Codigo Departamento','Nombre Departamento'], 
			colModel:[ 
				{ name:'codigo_departamento',index:'codigo_departamento', width:200}, 
				{ name:'nombre_departamento',index:'nombre_departamento', width:350}
