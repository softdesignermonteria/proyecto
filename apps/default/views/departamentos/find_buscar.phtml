			sortname: 'Cod_Departamento', 
			/*shrinkToFit :false,*/
			viewrecords: true, 
			sortorder: "asc", 
			caption:"listado de los Nbc Registrados",
			ondblClickRow:function(rowid,iRow,iCol,e){
				
				var fila = jQuery(this).jqGrid('getRowData',rowid);
					
					if( jQuery("#codigo_departamentos")    ){ jQuery("#codigo_departamentos").val(fila['codigo_departamento']); }
					if( jQuery("#nombre_departamentos") ){ jQuery("#nombre_departamentos").val(fila['nombre_departamento']); } 
					if( jQuery("#codigo_departamento")    ){ jQuery("#codigo_departamento").val(fila['codigo_departamento']); }
					if( jQuery("#nombre_departamento") ){ jQuery("#nombre_departamento").val(fila['nombre_departamento']); } 
					jQuery("#dialogo_departamentos").dialog("close");											
       		 }
		}); 
